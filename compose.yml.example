services:
  # The MySQL container is optional if you already have your own DB in place.
  mysql:
    container_name: mysql
    image: mysql:latest
    env_file:
      - .env
    networks:
      - epub-reader-net
    volumes:
      - /path/to/mysql/storage:/var/lib/mysql

  redis:
    container_name: redis
    image: redis:latest
    ports:
      - "6379:6379"
    networks:
      - epub-reader-net

  epub-reader:
    container_name: epub-reader
    image: epub-reader:latest
    env_file:
      - .env
    ports:
      - ${APP_PORT}:${APP_PORT}
    volumes:
      - /path/to/epub/directory:${BASE_DIRECTORY}
    networks:
      - epub-reader-net
    depends_on:
      - mysql

networks:
  epub-reader-net:
    driver: bridge